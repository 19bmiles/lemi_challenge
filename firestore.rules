rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Read-only challenge data
    match /challenges/{challenge} {
      allow read: if true;
      allow write: if false;
    }
    
    // Participants - anyone can read and write (for simplicity at the event)
    match /participants/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Leaderboard entries
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if true;
    }
  }
}